<h1>Twitter 後台</h1>
<div class="container"></div>

<ul class="nav">
  <li class="nav-item">
    <a class="nav-link border bg-primary rounded text-white" href='/admin/tweets'>Tweets</a>
  </li>
  <li class="nav-item">
    <a class="nav-link border" href='/admin/users'>Users</a>
  </li>
</ul>

<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">User name</th>
      <th scope="col">Tweet</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each tweets}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><a href='/users/{{this.User.id}}/tweets'>{{this.User.name}}</a></td>
      <td><a href='/tweets/{{this.id}}/replies'>{{this.description}}</a></td>
      <td>
        <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>